<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaApplication1.Views.MainWindow"
        Title="Camera Viewer"
        Width="1000" Height="600">
    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,*">
        <StackPanel Orientation="Horizontal" Margin="10" Spacing="10" Grid.ColumnSpan="2">
            <Button x:Name="OpenCameraButton" Content="Open Camera" Width="120" />
            <Button x:Name="CaptureButton" Content="Capture" Width="120" />
            <Button x:Name="SaveButton" Content="Save" Width="120" />
            <Button x:Name="LoadButton" Content="Load" Width="120" />
        </StackPanel>

        <ListBox x:Name="CapturedListBox"
                 Grid.Row="1"
                 Width="160"
                 Margin="10"
                 HorizontalAlignment="Left"
                 SelectionMode="Multiple"
                 SelectionChanged="OnCapturedImageSelected"
                 ItemsSource="{Binding CapturedImages}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding}" Width="140" Height="100" Stretch="UniformToFill" Margin="5" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Image x:Name="CameraImage"
               Grid.Row="1"
               Grid.Column="1"
               Margin="10"
               Stretch="Uniform" />
    </Grid>
</Window>
